<h2 class="parks-header">Available Park Campgrounds</h2>
<div class="row park-container">
  <% @parks.each do |park| %>
  <div class="col-sm-4 center park">
    <%= image_tag("tent-152.png") %>
    <h4><%= link_to  "#{park.name}", park_path(id: park.park_id), class:"park-link" %></h4>
  </div>
  <% end %>
</div>

<footer class="col-xs-12 footer">
  <div class="container">
    <span class="nps">Park and Campground information provided by National Park Service API</span>]
  </div>
</footer>
